<Window x:Class="PL.Cart.CustomerDetails"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Cart"
        mc:Ignorable="d"
        Title="CustomerDetails" Height="450" Width="800">
    <Grid>
        <Label Content="name" HorizontalAlignment="Left" Margin="84,105,0,0" VerticalAlignment="Top"/>
        <Label Content="address" HorizontalAlignment="Left" Margin="84,191,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.538,5.271"/>
        <Label Content="email" HorizontalAlignment="Left" Margin="84,270,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.908,5.154"/>
        <TextBox HorizontalAlignment="Left" Margin="84,136,0,0" TextWrapping="Wrap" Text="name" VerticalAlignment="Top" Width="120" TextChanged="TextBox_TextChanged_2"/>
        <TextBox HorizontalAlignment="Left" Margin="84,222,0,0" TextWrapping="Wrap" Text="address" VerticalAlignment="Top" Width="120" TextChanged="TextBox_TextChanged_1"/>
        <TextBox HorizontalAlignment="Left" Margin="71,301,0,0" TextWrapping="Wrap" Text="email" VerticalAlignment="Top" Width="120" TextChanged="TextBox_TextChanged"/>
        <Button Content="submit" Margin="10,375,478,10" Click="Button_Click"/>

    </Grid>
</Window>
